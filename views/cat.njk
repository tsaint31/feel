{% extends "layout.njk" %}

{% block content %}

    <h1 class="text-center bg-light"> Hello {{name}} </h1>
<div class="container-fluid bg-light">
<div class="row">
  <div class="col-lg-6 col-6">
      <h1 class="text-center bg-light"> YOUR FEELING TODAY: </h1>
      {% if feeling == 5 %}
      <h1>INVINCIBLE</h1>
      {% elif feeling == 4 %}
      <h1>READY</h1>
      {% elif feeling == 3 %}
      <h1>NEUTRAL</h1>
      {% elif feeling == 2 %}
      <h1>SMALL HEALTH</h1>
      {% elif feeling == 1 %}
      <h1>UNDERGROUND</h1>
      {% endif %}
      <img class="card-img-top" src=/{{feeling}}.jpg alt="Card image cap">
  </div>

  <div class="col-lg-6 col-6 ">
      <a href=/{{name}}><p class="text-center bg-light mt-5"> ENTER YOUR FEELING </p></a>
      <a href=/><p class="text-center bg-light mb-5"> NEW USER </p></a>
      <h1 class="text-center bg-light"> Feel free to contact for new challenges and advices: </h1>
      <a href="mailto:thierry.saintmaxent@gmail.com"><h4 class="text-center bg-light">thierry.saintmaxent@gmail.com</h4></a>
      <h4 class="text-center bg-light"> Record 10km : 35'28" </h4>
      <h4 class="text-center bg-light"> Record semi marathon : 1h18'46" </h4>
      <h4 class="text-center bg-light"> Record marathon : 2h57'53" </h4>
      <h4 class="text-center bg-light"> UTMB Finisher </h4>
  </div>
</div>

<div class="row">
  <div class="col-lg-6 col-6">
  <h1 class="text-center bg-light"> YOUR 10 PAST FEELING : </h1>
{% for element in stats %}
{% if element.feeling === 5 %}
<p>{{element.date}} {{element.name}} INVINCIBLE</p>
{% elif element.feeling === 4 %}
<p>{{element.date}} {{element.name}} READY </p>
{% elif element.feeling === 3 %}
<p>{{element.date}} {{element.name}} NEUTRAL</p>
{% elif element.feeling === 2 %}
<p>{{element.date}} {{element.name}} SMALL HEALTH</p>
{% else %}
<p>{{element.date}} {{element.name}} UNDERGROUND</p>
{% endif %}
{% endfor %}
</div>
<div class="col-lg-6 col-6">
<h1 class="text-center bg-light"> SINCE THE BEGGINING OF THE YEAR : </h1>
{% for element in yearstats %}
{% if element.feeling === 5 %}
<p>INVINCIBLE : {{element.count}}</p>
{% elif element.feeling === 4 %}
<p>READY : {{element.count}}</p>
{% elif element.feeling === 3 %}
<p>NEUTRAL : {{element.count}}</p>
{% elif element.feeling === 2 %}
<p>SMALL HEALTH : {{element.count}}</p>
{% elif element.feeling === 1 %}
<p>UNDERGROUND : {{element.count}} </p>
{% endif %}
{% endfor %}
</div>
</div>
</div>
<div class="container-fluid text-center text-white bg-primary jumbotron">
</div>

{% endblock %}
