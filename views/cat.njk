{% extends "layout.njk" %}

{% block content %}

    <h1 class="text-center bg-light"> Hello {{name}} </h1>
<div class="container-fluid bg-light">
<div class="row">

  <div class="col-lg-6 col-6 mr-1">
      <h1 class="text-center bg-light"> YOUR FEELING TODAY: </h1>
      <img class="card-img-top" src=/{{feeling}}.jpg alt="Card image cap">
  </div>

  <div class="col-lg-6 col-6 mr-1">
  <h1 class="text-center bg-light"> YOUR PAST FEELING : </h1>
{% for element in stats %}
<p>{{element.date}} {{element.name}} {{element.feeling}}</p>
{% endfor %}
</div>
</div>
</div>

{% endblock %}
